@model ProductsAndFlights

<h1>Dashboard</h1>

<h2>Flights</h2>
<table>
    <thead>
        <tr>
            <th>Flight Number</th>
            <th>Departure</th>
            <th>Destination</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var flight in Model.Flights)
        {
            <tr>
                <td>@flight.FlightNumber</td>
                <td>@flight.Departure</td>
                <td>@flight.Destination</td>
            </tr>
        }
    </tbody>
</table>

<h2>Products</h2>
<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
            </tr>
        }
    </tbody>
</table>
