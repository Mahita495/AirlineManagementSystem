@model AirlineManagementSystem.DTOs.BookingDto

@{
    ViewData["Title"] = "Book Flight";
}

<h2>Book Flight</h2>

<form asp-action="Book" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="From"></label>
        <input asp-for="From" class="form-control" readonly />
        <span asp-validation-for="From" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="To"></label>
        <input asp-for="To" class="form-control" readonly />
        <span asp-validation-for="To" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartureTime"></label>
        <input asp-for="DepartureTime" class="form-control" readonly />
        <span asp-validation-for="DepartureTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ArrivalTime"></label>
        <input asp-for="ArrivalTime" class="form-control" readonly />
        <span asp-validation-for="ArrivalTime" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="FlightId" />

    <button type="submit" class="btn btn-primary mt-3">Confirm Booking</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}