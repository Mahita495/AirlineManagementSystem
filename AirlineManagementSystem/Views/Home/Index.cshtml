@{
    ViewData["Title"] = "Welcome to Airline Management System";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="mb-4">Welcome to the Airline Management System</h1>
        <p>
            Explore and manage airline flight details with ease.<br />
            Our system provides seamless access to view, book, and manage flights.<br />
